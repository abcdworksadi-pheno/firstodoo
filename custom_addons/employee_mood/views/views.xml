<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Form view for employee mood -->
    <record id="view_employee_mood_form" model="ir.ui.view">
      <field name="name">employee_mood.form</field>
      <field name="model">employee_mood.employee_mood</field>
      <field name="arch" type="xml">
        <form string="Humeur Employé">
          <sheet>
            <group>
              <field name="employee_id"/>
              <field name="date"/>
              <field name="mood"/>
            </group>
            <group>
              <field name="note" nolabel="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- List (tree) view for employee mood -->
    <record id="view_employee_mood_list" model="ir.ui.view">
      <field name="name">employee_mood.list</field>
      <field name="model">employee_mood.employee_mood</field>
      <field name="arch" type="xml">
        <list string="Humeurs">
          <field name="employee_id"/>
          <field name="date"/>
          <field name="mood"/>
          <field name="note"/>
        </list>
      </field>
    </record>

    <!-- Search view -->
    <record id="view_employee_mood_search" model="ir.ui.view">
      <field name="name">employee_mood.search</field>
      <field name="model">employee_mood.employee_mood</field>
      <field name="arch" type="xml">
        <search string="Recherche Humeur">
          <field name="employee_id"/>
          <field name="date"/>
          <filter name="filter_mood_bad" string="Mauvaise humeur" domain="[('mood','in',['1','2'])]"/>
          <filter name="filter_mood_good" string="Bonne humeur" domain="[('mood','in',['4','5'])]"/>
        </search>
      </field>
    </record>

    <!-- Action -->
    <record id="action_employee_mood" model="ir.actions.act_window">
      <field name="name">Humeurs employés</field>
      <field name="res_model">employee_mood.employee_mood</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="view_employee_mood_search"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_employee_mood_root" name="Humeurs" sequence="90"/>
    <menuitem id="menu_employee_mood" name="Humeurs employés" parent="menu_employee_mood_root" action="action_employee_mood"/>

  </data>
</odoo>
