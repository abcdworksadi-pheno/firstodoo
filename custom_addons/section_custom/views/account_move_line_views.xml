<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Héritage de la vue formulaire de facture pour modifier le tree inline des lignes -->
    <record id="view_move_form_inherit_section_custom" model="ir.ui.view">
        <field name="name">account.move.form.section.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Renommer la description en Code Customer -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="attributes">
                <attribute name="string">Code Customer</attribute>
            </xpath>
            <!-- Ajouter le code section après la description -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="after">
                <field name="x_section_code"
                       string="Code Section"
                       optional="show"
                       invisible="display_type == 'line_section'"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
