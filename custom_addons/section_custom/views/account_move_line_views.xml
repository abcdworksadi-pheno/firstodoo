<odoo>
  <data>
   <record id="view_section_custom_inherit_tree" model="ir.ui.view">
        <field name="name">account.move.line.tree.section.custom</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_type']" position="after">
                <field name="x_section_code"
                       attrs="{'invisible': [('display_type','!=','line_section')]}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_section_custom_inherit_list" model="ir.ui.view">
        <field name="name">account.move.line.list.section.custom</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_tree"/>
        <field name="arch" type="xml">
            <!-- Ajouter explicitement le champ name (description) avec le label "Code Customer" aprÃ¨s product_id pour garantir son affichage -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="name" string="Code Customer"/>
                <field name="x_section_code"
                       string="Code Section"
                       attrs="{'invisible': [('display_type','!=','line_section')]}"
                />
            </xpath>
            <!-- Modifier le label de tous les champs name existants en "Code Customer" -->
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Code Customer</attribute>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
