<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Kanban pour les Clients -->
    <record id="view_license_client_kanban" model="ir.ui.view">
        <field name="name">license.client.kanban</field>
        <field name="model">license.client</field>
        <field name="arch" type="xml">
            <kanban default_group_by="active" class="o_kanban_small_column">
                <field name="name"/>
                <field name="code"/>
                <field name="license_count"/>
                <field name="active"/>
                <field name="email"/>
                <field name="phone"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="text-muted small">Licences</div>
                                        <div>
                                            <field name="license_count"/> licence(s)
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2" invisible="not email and not phone">
                                    <div class="col-12">
                                        <div class="text-muted small" invisible="not email">Email</div>
                                        <div invisible="not email">
                                            <field name="email"/>
                                        </div>
                                        <div class="text-muted small mt-1" invisible="not phone">Téléphone</div>
                                        <div invisible="not phone">
                                            <field name="phone"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Mise à jour de l'action pour inclure la vue kanban -->
    <record id="license_client_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">license.client</field>
        <field name="view_mode">kanban,list,graph,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
