<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_client_tree" model="ir.ui.view">
        <field name="name">license.client.tree</field>
        <field name="model">license.client</field>
        <field name="arch" type="xml">
            <list string="Clients">
                <field name="name"/>
                <field name="code"/>
                <field name="contact_name"/>
                <field name="email"/>
                <field name="license_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_license_client_form" model="ir.ui.view">
        <field name="name">license.client.form</field>
        <field name="model">license.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <header>
                    <button name="action_view_licenses" 
                            type="object" 
                            string="Voir Licences"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="contact_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Licences" name="licenses">
                            <field name="license_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="edition"/>
                                    <field name="expiry_date"/>
                                    <field name="max_users"/>
                                    <field name="issued_at"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_license_client_search" model="ir.ui.view">
        <field name="name">license.client.search</field>
        <field name="model">license.client</field>
        <field name="arch" type="xml">
            <search string="Clients">
                <field name="name"/>
                <field name="code"/>
                <field name="email"/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactifs" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_license_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">license.client</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier client
            </p>
            <p>
                Les clients sont les entreprises pour lesquelles vous générez des licences.
            </p>
        </field>
    </record>
</odoo>
