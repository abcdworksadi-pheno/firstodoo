<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Kanban pour les Clés -->
    <record id="view_license_key_kanban" model="ir.ui.view">
        <field name="name">license.key.kanban</field>
        <field name="model">license.key</field>
        <field name="arch" type="xml">
            <kanban default_group_by="active" class="o_kanban_small_column">
                <field name="name"/>
                <field name="active"/>
                <field name="key_generated"/>
                <field name="license_count"/>
                <field name="create_date"/>
                <progressbar field="active" colors='{"false": "secondary", "true": "success"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_header_top_right">
                                    <span class="badge badge-success" invisible="not active">Active</span>
                                    <span class="badge badge-secondary" invisible="active">Inactive</span>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="text-muted small">Statut</div>
                                        <div>
                                            <span class="badge badge-success" invisible="not key_generated">Générée</span>
                                            <span class="badge badge-warning" invisible="key_generated">Non générée</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-muted small">Licences</div>
                                        <div>
                                            <field name="license_count"/> licence(s)
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="text-muted small">Créée le</div>
                                        <div>
                                            <field name="create_date" widget="date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Mise à jour de l'action pour inclure la vue kanban -->
    <record id="license_key_action" model="ir.actions.act_window">
        <field name="name">Paires de Clés</field>
        <field name="res_model">license.key</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
