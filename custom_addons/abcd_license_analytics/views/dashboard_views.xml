<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Principal -->
    <record id="view_license_dashboard" model="ir.ui.view">
        <field name="name">license.dashboard</field>
        <field name="model">license.analytics</field>
        <field name="arch" type="xml">
            <form string="Tableau de Bord des Licences" create="0" delete="0">
                <sheet>
                    <div class="oe_dashboard">
                        <!-- Statistiques Globales -->
                        <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Total Licences</h5>
                                        <h2 class="text-primary" id="stat_total">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Licences Actives</h5>
                                        <h2 class="text-success" id="stat_active">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Expirées</h5>
                                        <h2 class="text-danger" id="stat_expired">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Expirent Bientôt</h5>
                                        <h2 class="text-warning" id="stat_expiring">0</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Graphiques -->
                        <div class="row mt-3">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Répartition par Édition</h5>
                                    </div>
                                    <div class="card-body">
                                        <div id="chart_edition" style="height: 300px;"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Tendances (12 derniers mois)</h5>
                                    </div>
                                    <div class="card-body">
                                        <div id="chart_trends" style="height: 300px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Top Clients et Modules -->
                        <div class="row mt-3">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Top 10 Clients</h5>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Client</th>
                                                    <th class="text-right">Licences</th>
                                                </tr>
                                            </thead>
                                            <tbody id="top_clients">
                                                <tr><td colspan="2" class="text-center">Chargement...</td></tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Modules les Plus Utilisés</h5>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Module</th>
                                                    <th class="text-right">Utilisations</th>
                                                </tr>
                                            </thead>
                                            <tbody id="top_modules">
                                                <tr><td colspan="2" class="text-center">Chargement...</td></tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Licences Expirant Bientôt -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Licences Expirant dans les 30 Prochains Jours</h5>
                                    </div>
                                    <div class="card-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Licence</th>
                                                    <th>Client</th>
                                                    <th>Date d'Expiration</th>
                                                    <th>Jours Restants</th>
                                                </tr>
                                            </thead>
                                            <tbody id="expiring_licenses">
                                                <tr><td colspan="4" class="text-center">Chargement...</td></tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour le Dashboard -->
    <record id="action_license_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de Bord</field>
        <field name="res_model">license.analytics</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_license_dashboard"/>
        <field name="target">current</field>
    </record>
</odoo>
