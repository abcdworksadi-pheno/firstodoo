<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Données de priorités par défaut -->
        <record id="priority_low" model="task.priority">
            <field name="name">Basse</field>
            <field name="sequence">10</field>
            <field name="color">2</field>
            <field name="description">Tâche de basse priorité</field>
        </record>

        <record id="priority_medium" model="task.priority">
            <field name="name">Normale</field>
            <field name="sequence">20</field>
            <field name="color">3</field>
            <field name="description">Tâche de priorité normale</field>
        </record>

        <record id="priority_high" model="task.priority">
            <field name="name">Haute</field>
            <field name="sequence">30</field>
            <field name="color">4</field>
            <field name="description">Tâche de haute priorité</field>
        </record>

        <record id="priority_urgent" model="task.priority">
            <field name="name">Urgent</field>
            <field name="sequence">40</field>
            <field name="color">1</field>
            <field name="description">Tâche urgente</field>
        </record>

        <!-- Données d'étiquettes par défaut -->
        <record id="tag_bug" model="task.tag">
            <field name="name">Bogue</field>
            <field name="color">1</field>
            <field name="description">Correction de bug</field>
        </record>

        <record id="tag_feature" model="task.tag">
            <field name="name">Nouvelle Fonctionnalité</field>
            <field name="color">3</field>
            <field name="description">Nouvelle fonctionnalité à développer</field>
        </record>

        <record id="tag_improvement" model="task.tag">
            <field name="name">Amélioration</field>
            <field name="color">4</field>
            <field name="description">Amélioration du code existant</field>
        </record>

        <record id="tag_documentation" model="task.tag">
            <field name="name">Documentation</field>
            <field name="color">5</field>
            <field name="description">Tâche de documentation</field>
        </record>

        <record id="tag_review" model="task.tag">
            <field name="name">Révision</field>
            <field name="color">6</field>
            <field name="description">Révision du code</field>
        </record>
    </data>
</odoo>
