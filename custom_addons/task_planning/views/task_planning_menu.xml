<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="action_task_planning" model="ir.actions.act_window">
      <field name="name">Tâches Planifiées</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">task.planning</field>
      <field name="view_mode">list,form,kanban,calendar</field>
      <field name="search_view_id" ref="view_task_planning_search"/>
      <field name="context">{}</field>
    </record>
    <record id="action_task_priority" model="ir.actions.act_window">
      <field name="name">Priorités</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">task.priority</field>
      <field name="view_mode">list,form</field>
    </record>
    <record id="action_task_tag" model="ir.actions.act_window">
      <field name="name">Étiquettes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">task.tag</field>
      <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_task_planning_root" name="Planification des Tâches" icon="fa-tasks"/>
    <menuitem id="menu_task_planning_tasks" name="Tâches" parent="menu_task_planning_root" action="action_task_planning" sequence="10"/>
    <menuitem id="menu_task_planning_config" name="Configuration" parent="menu_task_planning_root" sequence="20"/>
    <menuitem id="menu_task_planning_priorities" name="Priorités" parent="menu_task_planning_config" action="action_task_priority" sequence="1"/>
    <menuitem id="menu_task_planning_tags" name="Étiquettes" parent="menu_task_planning_config" action="action_task_tag" sequence="2"/>
  </data>
</odoo>
