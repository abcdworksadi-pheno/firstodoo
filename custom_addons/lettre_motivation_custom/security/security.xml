<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Catégorie de sécurité -->
        <record id="module_category_lettre_motivation" model="ir.module.category">
            <field name="name">Lettres de Motivation</field>
            <field name="description">Gestion des lettres de motivation</field>
            <field name="sequence">100</field>
        </record>

        <!-- Groupe utilisateur -->
        <record id="group_lettre_motivation_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_lettre_motivation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Groupe manager -->
        <record id="group_lettre_motivation_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_lettre_motivation"/>
            <field name="implied_ids" eval="[(4, ref('group_lettre_motivation_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>

