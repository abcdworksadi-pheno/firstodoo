<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Héritage de la vue formulaire sale.order pour ajouter le bouton -->
        <record id="view_sale_order_form_inherit_lettre" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.lettre</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Ajouter le bouton dans l'en-tête -->
                <xpath expr="//header" position="inside">
                    <button name="action_generate_lettre" 
                            type="object" 
                            string="Générer Lettre de Motivation"
                            class="oe_highlight"
                            icon="fa-file-text-o"/>
                    <button name="action_view_lettres" 
                            type="object" 
                            string="Voir Lettres"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            invisible="lettre_motivation_count == 0">
                        <field name="lettre_motivation_count" widget="statinfo" string="Lettres"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

